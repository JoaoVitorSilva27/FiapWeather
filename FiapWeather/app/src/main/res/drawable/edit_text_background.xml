<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_focused="true">
        <shape android:shape="rectangle">
            <solid android:color="#FFFFFF"/> <!-- Cor de fundo quando o EditText está em foco -->
            <stroke android:width="2dp" android:color="#815896"/> <!-- Cor da borda quando em foco -->
        </shape>
    </item>
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#FFFFFF"/> <!-- Cor de fundo padrão -->
            <stroke android:width="1dp" android:color="#CCCCCC"/> <!-- Cor da borda padrão -->
        </shape>
    </item>
</selector>
